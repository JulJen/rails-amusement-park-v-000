<%= form_for :user, url: users_path, method: :post do |f| %>
    <%= f.label :name %><br>
    <%= f.text_field :name %>

    <br><br>

    <%= f.label :height, "Height (in inches)" %><br>
    <%= f.number_field :height %>

    <br><br>

    <%= f.label :happiness, "How happy are you? (1-5 scale)" %><br>
    <%= f.number_field :happiness %>

    <br><br>

    <%= f.label :nausea, "How nauseous are you? (1-5 scale)" %><br>
    <%= f.number_field :nausea %>

    <br><br>

    <%= f.label :tickets, "How many dollars are in your pocket?" %><br>
    <%= f.number_field :tickets%>

    <br><br>

    <%= label_tag(:admin, "Check box if you are a theme park owner") %>
    <%= f.check_box :admin , {}, "true", "false" %>

    <br><br>

    <%= f.label :password %><br>
    <%= f.password_field :password %>

    <br><br>

    <%= f.submit 'Create User' %>
<% end %>

<br><br>

<p>Existing user? <%= link_to(controller: 'sessions', action: 'create') { 'Log In' } %>
